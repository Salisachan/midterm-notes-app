<%- include('../partials/header', { title: 'New Note' }) %>

    <h1 class="mb-4">Create a New Note</h1>

    <% if (typeof error !=='undefined' ) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
        <% } %>

            <form action="/notes" method="POST">
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input type="text" name="title" class="form-control" value="<%= form?.title || '' %>">
                </div>

                <div class="mb-3">
                    <label class="form-label">Content</label>
                    <textarea name="content" rows="9" class="form-control"><%= form?.content || '' %></textarea>
                </div>

                <button type="submit" class="btn btn-success">Save</button>
                <a href="/notes" class="btn btn-secondary ms-2">Cancel</a>
            </form>

            <%- include('../partials/footer') %>