<%- include('../partials/header', { title: 'My Notes' }) %>

    <div class="container py-4">
        <h1 class="mb-4">My Notes</h1>

        <a href="/notes/new" class="btn btn-primary mb-3">+ New Note</a>

        <% if (notes.length===0) { %>
            <p class="text-muted">No notes yet.</p>
            <% } else { %>
                <div class="row row-cols-1 row-cols-md-2 g-3">
                    <% for (let note of notes) { %>
                        <div class="col">
                            <div class="card h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title mb-2">
                                        <a href="/notes/<%= note._id %>" class="text-decoration-none">
                                            <%= note.title %>
                                        </a>
                                    </h5>

                                    <p class="card-text flex-grow-1 text-truncate">
                                        <%= note.content %>
                                    </p>

                                    <div class="d-flex gap-2 mt-3">
                                        <a href="/notes/<%= note._id %>/edit" class="btn btn-sm btn-outline-secondary">
                                            Edit
                                        </a>

                                        <form action="/notes/<%= note._id %>?_method=DELETE" method="POST" class="m-0">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
                <% } %>
    </div>

    <%- include('../partials/footer') %>